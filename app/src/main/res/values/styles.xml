<resources>

	<!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="android:Theme.Light">
		<!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
		-->
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

	<style name="AppBaseThemeNoActionBar" parent="AppBaseTheme">

		<!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@null</item>
	</style>

	<style name="AppBaseThemeNoActionBarWhite" parent="AppBaseTheme">

		<!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@color/white</item>
	</style>

	<style name="text_version" parent="android:Widget">
		<item name="android:textSize">@dimen/font_size_version</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="text_title" parent="android:Widget">
		<item name="android:textColor">@color/red</item>
		<item name="android:textSize">@dimen/font_size_title</item>
	</style>

	<style name="text_subtitle" parent="android:Widget">
		<item name="android:textColor">@color/red</item>
		<item name="android:textSize">@dimen/font_size_subtitle_button</item>
	</style>

	<style name="text_registration_login_label" parent="android:Widget">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/font_size_default</item>
	</style>

	<style name="text_settings" parent="android:Widget">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">@dimen/font_size_default</item>
	</style>

	<style name="list_text_title" parent="android:Widget">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/red</item>
		<item name="android:textSize">@dimen/font_size_default</item>
	</style>

	<style name="list_text_description" parent="android:Widget">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/font_size_description</item>
	</style>

	<style name="info_text_title" parent="android:Widget">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">@dimen/font_size_subtitle_button</item>
	</style>

	<style name="info_text_description" parent="android:Widget">
		<item name="android:textSize">@dimen/font_size_description</item>
	</style>

	<style name="agenda_header" parent="android:Widget">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/red</item>
		<item name="android:textSize">@dimen/font_size_version</item>
	</style>

	<style name="agenda_description" parent="android:Widget">
		<item name="android:textSize">@dimen/font_size_version</item>
	</style>

	<style name="button" parent="android:Widget">
		<item name="android:textColor">@color/color_button_text</item>
		<item name="android:textSize">@dimen/font_size_subtitle_button</item>
		<item name="android:background">@drawable/button_style</item>
	</style>

	<style name="document_title" parent="android:Widget">
		<item name="android:textColor">@color/red</item>
		<item name="android:textSize">@dimen/font_size_version</item>
	</style>

	<style name="details_header" parent="android:Widget">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">@dimen/font_size_subtitle_button</item>
	</style>

	<style name="text_about_red" parent="android:Widget">
		<item name="android:textColor">@color/red</item>
		<item name="android:textSize">@dimen/font_size_default</item>
	</style>

	<style name="text_black_bold" parent="android:Widget">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">@dimen/font_size_default</item>
	</style>

	<style name="agenda_viewed_yes" parent="android:Widget">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/color_document_viewed_yes</item>
		<item name="android:textSize">@dimen/font_size_version</item>
	</style>

	<style name="agenda_viewed_no" parent="android:Widget">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/color_document_viewed_no</item>
		<item name="android:textSize">@dimen/font_size_version</item>
	</style>

</resources>
